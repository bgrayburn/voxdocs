{
  "compilerOptions": {
    "target": "ES2022", // Target ECMAScript 2022 output
    "module": "NodeNext", // Use ES Module syntax
    "lib": ["ES2023"], // Include ES2023 library definitions
    "moduleResolution": "NodeNext", // Align with Node.js ESM resolution
    "esModuleInterop": true, // Enable interoperability with CommonJS modules
    "allowImportingTsExtensions": true, // Allow importing .ts extensions in ES modules
    "isolatedModules": true, // Ensure each file is treated as a separate module
    "noEmit": true, // Don't output compiled files
    "strict": true, // Enable strict type-checking
    "skipLibCheck": true, // Skip checking .d.ts files for faster builds

    /* Linting */
    "noUnusedLocals": true, // Error on unused local variables
    "noUnusedParameters": true, // Error on unused parameters
    "noFallthroughCasesInSwitch": true // Error on fallthrough cases in switch statements
  },
  "include": ["server.ts"] // Include the server entry point
}
